.chat-main
  .chat-main__header
    .chat-main__header-name
      = @group.name
      .chat-main__header-member
        member :
        - @group.users.each do|users|
          = users.name
        end
    
    .chat-main__header-btn
      = link_to edit_group_path(current_user) do
        edit
  .chat-main__message
    .chat-main__message-list
      .chat-main__message-name
        = render @messages

  .chat-main__form
    .input-box
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'chat-main__form__message__text', placeholder: 'type a message'
        %label.chat-main__form__message__img 
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'input'
        = f.submit 'Send', class: 'chat-main__form__btn'
